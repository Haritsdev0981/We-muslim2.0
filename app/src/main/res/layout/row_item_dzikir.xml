<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_dzikir"
    android:layout_marginTop="12dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:padding="5dp">

    <TextView
        android:id="@+id/tv_desc_dzikir_pagi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bismillah"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_lafaz_dzikir_pagi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="بِسْمِ اللَّهِ الرَّحْمَنِ الرَّحِيْمِ"
        android:fontFamily="@font/arabic_arihna"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_desc_dzikir_pagi"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_terjemahan_dzikir_pagi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dengan Menyebut Nama Allah Yang Maha Pengasih Maha Penyayang"
        android:fontFamily="sans-serif"
        android:textColor="@color/gray_text"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tv_lafaz_dzikir_pagi"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>